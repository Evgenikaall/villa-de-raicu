{
  "projects": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node",
      "routes": [
        { "src": "/api/(.*)", "dest": "backend/index.js" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/index.js" }
  ]
}